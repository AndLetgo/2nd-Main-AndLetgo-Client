<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_poster_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:adjustViewBounds="true" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/fl_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.core.widget.NestedScrollView
                android:id="@+id/nsv_bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_bottom_sheet">

                    <ImageView
                        android:id="@+id/iv_handle"
                        android:layout_width="@dimen/item_32"
                        android:layout_height="@dimen/item_4"
                        android:background="@drawable/shape_corner_round_full"
                        android:backgroundTint="@color/gray_medium"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/margin_16" />

                    <TextView
                        android:id="@+id/tv_exhibition_name"
                        android:layout_width="@dimen/item_0"
                        android:layout_height="wrap_content"
                        android:text="NameNameNameNameNameName"
                        style="@style/XL_bold"
                        android:textColor="@color/basic_black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_keyword_second"
                        android:layout_marginTop="@dimen/margin_40"
                        android:layout_marginStart="@dimen/margin_24"
                        android:layout_marginEnd="@dimen/margin_12" />

                    <TextView
                        android:id="@+id/tv_keyword_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_corner_round_full"
                        android:elevation="@dimen/shadow_2"
                        android:text="전시중"
                        style="@style/S_bold"
                        android:textColor="@color/basic_point"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_keyword_first"
                        android:layout_marginTop="@dimen/margin_40"
                        android:layout_marginEnd="@dimen/margin_8" />

                    <TextView
                        android:id="@+id/tv_keyword_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_corner_round_full"
                        android:elevation="@dimen/shadow_2"
                        android:text="무료"
                        style="@style/S_bold"
                        android:textColor="@color/basic_point"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/margin_40"
                        android:layout_marginEnd="@dimen/margin_24" />

                    <LinearLayout
                        android:id="@+id/ll_exhibition_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_exhibition_name"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="@dimen/margin_20"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="@dimen/margin_24"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/tv_place_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전시장 이름"
                            style="@style/S_regular"
                            android:textColor="@color/basic_black"/>
                        <ImageView
                            android:layout_width="@dimen/item_18"
                            android:layout_height="@dimen/item_18"
                            android:src="@drawable/ic_arrow_next"
                            android:background="@color/basic_white"
                            android:layout_marginTop="@dimen/margin_1"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="전시장 주소"
                        style="@style/S_regular"
                        android:textColor="@color/basic_black"
                        app:layout_constraintTop_toBottomOf="@id/ll_exhibition_place"
                        android:layout_marginHorizontal="@dimen/margin_24"/>
                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0000.00.00 ~ 0000.00.00"
                        style="@style/S_regular"
                        android:textColor="@color/basic_black"
                        app:layout_constraintTop_toBottomOf="@id/tv_address"
                        android:layout_marginHorizontal="@dimen/margin_24"/>
                    <TextView
                        android:id="@+id/tv_place_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="00:00 - 00:00 / 휴관"
                        style="@style/S_regular"
                        android:textColor="@color/basic_black"
                        app:layout_constraintTop_toBottomOf="@id/tv_date"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ll_info_btns"
                        android:layout_marginHorizontal="@dimen/margin_24"/>
                    <LinearLayout
                        android:id="@+id/ll_info_btns"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@id/tv_place_time"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/margin_24"
                        android:gravity="end">
                        <ImageButton
                            android:id="@+id/ib_interest"
                            android:layout_width="@dimen/item_32"
                            android:layout_height="@dimen/item_32"
                            android:src="@drawable/selector_btn_interest"
                            />
                        <ImageButton
                            android:id="@+id/ib_call"
                            android:layout_width="@dimen/item_32"
                            android:layout_height="@dimen/item_32"
                            android:src="@drawable/ic_exhibition_call"
                            android:layout_marginHorizontal="@dimen/margin_8"
                            />
                        <ImageButton
                            android:id="@+id/ib_go_web"
                            android:layout_width="@dimen/item_32"
                            android:layout_height="@dimen/item_32"
                            android:src="@drawable/ic_exhibition_go_web"
                            />
                    </LinearLayout>
                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_1"
                        android:background="@color/gray_light"
                        app:layout_constraintTop_toBottomOf="@id/tv_place_time"
                        app:layout_constraintBottom_toTopOf="@id/tv_info_title"
                        android:layout_marginVertical="@dimen/margin_28"
                        android:layout_marginHorizontal="@dimen/margin_24"/>
                    <TextView
                        android:id="@+id/tv_info_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/exhibition_information"
                        style="@style/M_medium"
                        android:textColor="@color/basic_black"
                        app:layout_constraintTop_toBottomOf="@id/divider"
                        android:layout_marginHorizontal="@dimen/margin_24"
                        android:layout_marginTop="@dimen/margin_28"/>
                    <TextView
                        android:id="@+id/tv_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="류지안, 김종언, 김동우 등 유명 작가들의 작품을 한 공간에서 만나보세요. 많은 화제가 되고 있는 류지안 작가의 신작과 MOONLIGHT 시리즈, HERITAGE 시리즈, THE MO"
                        style="@style/S_regular"
                        android:textColor="@color/gray_medium"
                        app:layout_constraintTop_toBottomOf="@id/tv_info_title"
                        android:layout_marginHorizontal="@dimen/margin_24"
                        android:layout_marginTop="@dimen/margin_4"/>
                    <TextView
                        android:id="@+id/tv_more_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exhibition_more_info"
                        style="@style/S_bold"
                        android:textColor="@color/gray_medium"
                        app:layout_constraintEnd_toEndOf="@id/tv_information"
                        app:layout_constraintBottom_toBottomOf="@id/tv_information"
                        android:background="@color/basic_white"/>
                    <TextView
                        android:id="@+id/tv_rating_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/exhibition_rating"
                        style="@style/M_medium"
                        android:textColor="@color/basic_black"
                        app:layout_constraintTop_toBottomOf="@id/tv_information"
                        android:layout_marginHorizontal="@dimen/margin_24"
                        android:layout_marginTop="@dimen/margin_32"/>
                    <com.willy.ratingbar.BaseRatingBar
                        android:id="@+id/rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/item_45"
                        app:srb_numStars="5"
                        app:srb_starWidth="@dimen/item_45"
                        app:srb_starHeight="@dimen/item_45"
                        app:srb_starPadding="@dimen/margin_4"
                        app:srb_stepSize="0.5"
                        app:srb_isIndicator="false"
                        app:srb_clickable="true"
                        app:srb_scrollable="true"
                        app:srb_drawableEmpty="@drawable/ic_rating_empty_45"
                        app:srb_drawableFilled="@drawable/ic_rating_full_45"
                        app:layout_constraintTop_toBottomOf="@id/tv_rating_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/margin_12"/>
                    <TextView
                        android:id="@+id/tv_review_title"
                        android:layout_width="@dimen/item_0"
                        android:layout_height="wrap_content"
                        android:text="@string/exhibition_review"
                        style="@style/M_medium"
                        android:textColor="@color/basic_black"
                        app:layout_constraintTop_toBottomOf="@id/rating_bar"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btn_writing_review"
                        android:layout_marginHorizontal="@dimen/margin_24"
                        android:layout_marginStart="@dimen/margin_24"
                        android:layout_marginTop="@dimen/margin_32"/>
                    <ImageButton
                        android:id="@+id/btn_writing_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_writing"
                        android:background="@color/basic_white"
                        app:layout_constraintTop_toBottomOf="@id/rating_bar"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/margin_32"
                        android:layout_marginEnd="@dimen/margin_24"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_exhibition_review"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_0"
                        app:layout_constraintTop_toBottomOf="@id/tv_review_title"
                        android:layout_marginTop="@dimen/margin_12"
                        tools:listitem="@layout/item_exhibition_review"
                        android:clipToPadding="false"
                        android:paddingBottom="@dimen/margin_40"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>