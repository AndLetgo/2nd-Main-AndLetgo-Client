<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.example.jeonsilog.R"/>
        <import type="android.content.Context"/>

        <variable
            name="vm"
            type="com.example.jeonsilog.viewmodel.ExhibitionViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.exhibition.ReviewFragment"
        android:background="@color/basic_white">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exhibition_review"
                style="@style/XL_bold"
                android:textColor="@color/basic_black"/>
        </androidx.appcompat.widget.Toolbar>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_20"
            android:paddingTop="@dimen/margin_16"
            android:layout_marginHorizontal="@dimen/margin_24"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <LinearLayout
                android:id="@+id/ll_user_profile_area"
                android:layout_width="@dimen/item_0"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/margin_2"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@id/brb_exhibition_review"
                >
                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="@dimen/item_24"
                    android:layout_height="@dimen/item_24"
                    android:background="@drawable/illus_default_profile"
                    />
                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가가가가나다가나가난"
                    style="@style/M_regular"
                    android:textColor="@color/gray_dark"
                    android:layout_marginStart="@dimen/margin_8"
                    />

            </LinearLayout>

            <com.willy.ratingbar.BaseRatingBar
                android:id="@+id/brb_exhibition_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srb_numStars="5"
                app:srb_starWidth="@dimen/item_28"
                app:srb_starHeight="@dimen/item_28"
                app:srb_starPadding="@dimen/margin_0"
                app:srb_stepSize="0.5"
                app:srb_isIndicator="false"
                app:srb_clickable="false"
                app:srb_scrollable="false"
                app:srb_drawableEmpty="@drawable/ic_rating_empty"
                app:srb_drawableFilled="@drawable/ic_rating_full"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ib_menu"
                android:layout_marginEnd="@dimen/margin_8"/>
            <ImageButton
                android:id="@+id/ib_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu"
                android:background="@color/basic_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/margin_2"/>
            <TextView
                android:id="@+id/tv_review_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ll_user_profile_area"
                android:layout_marginTop="@dimen/margin_12"
                style="@style/M_regular"
                android:textColor="@color/gray_dark"/>
            <TextView
                android:id="@+id/tv_reply_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/exhibition_reply_count(vm.replyCount)}"
                style="@style/S_regular"
                android:textColor="@color/gray_medium"
                app:layout_constraintTop_toBottomOf="@id/tv_review_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/margin_16"/>
            <TextView
                android:id="@+id/tv_review_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어제"
                style="@style/S_regular"
                android:textColor="@color/gray_medium"
                app:layout_constraintTop_toBottomOf="@id/tv_review_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/margin_16"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_1"
            android:layout_marginHorizontal="@dimen/margin_24"
            android:background="@color/gray_light_medium"
            app:layout_constraintTop_toBottomOf="@id/cl_review"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_exhibition_review_reply"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_0"
            app:layout_constraintTop_toBottomOf="@id/v_divider"
            app:layout_constraintBottom_toTopOf="@id/cv_input_area"
            tools:listitem="@layout/item_review_reply"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_input_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/v_divider_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_1"
                    android:background="@color/gray_light_medium"
                    app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                    android:id="@+id/iv_input_profile"
                    android:layout_width="@dimen/item_32"
                    android:layout_height="@dimen/item_32"
                    android:background="@drawable/illus_default_profile"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginVertical="@dimen/margin_12"
                    android:layout_marginStart="@dimen/margin_16"/>
                <EditText
                    android:id="@+id/et_writing_reply"
                    android:layout_width="@dimen/item_0"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:scrollbars="vertical"
                    android:background="@color/transparent"
                    android:hint="@string/exhibition_reply_hint"
                    style="@style/M_regular"
                    android:textColor="@color/basic_black"
                    android:textColorHint="@color/gray_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_input_profile"
                    app:layout_constraintEnd_toStartOf="@id/btn_enter_reply"
                    android:layout_marginHorizontal="@dimen/margin_16"
                    android:paddingVertical="@dimen/margin_16"/>
                <Button
                    android:id="@+id/btn_enter_reply"
                    android:layout_width="@dimen/item_46"
                    android:layout_height="@dimen/item_40"
                    android:text="@string/btn_register"
                    android:minWidth="@dimen/item_0"
                    android:background="@color/transparent"
                    style="@style/M_bold"
                    android:textColor="@{vm.checkCount? context.getColor(R.color.basic_point) : context.getColor(R.color.gray_medium)}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_8"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>