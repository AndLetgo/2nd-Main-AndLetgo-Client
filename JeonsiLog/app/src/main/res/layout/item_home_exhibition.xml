<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/margin_24"
        android:paddingVertical="@dimen/margin_16"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="@dimen/item_100"
            android:layout_height="@dimen/item_132" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_12"
            android:orientation="vertical"
            android:layout_marginVertical="@dimen/margin_8">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/M_medium"
                android:text="title"
                android:textColor="@color/basic_black" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/S_regular"
                android:text="address"
                android:textColor="@color/gray_medium"
                android:layout_marginTop="@dimen/margin_4" />

            <TextView
                android:id="@+id/tv_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/S_regular"
                android:text="place"
                android:textColor="@color/gray_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/tv_keyword_operating"
                    android:layout_width="@dimen/item_74"
                    android:layout_height="@dimen/item_32"
                    android:background="@drawable/shape_corner_round_full"
                    android:elevation="@dimen/shadow_2"
                    android:text="시작전"
                    style="@style/S_bold"
                    android:textColor="@color/basic_point"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/margin_2"
                    android:layout_marginBottom="@dimen/margin_2" />

                <TextView
                    android:id="@+id/tv_keyword_price"
                    android:layout_width="@dimen/item_74"
                    android:layout_height="@dimen/item_32"
                    android:background="@drawable/shape_corner_round_full"
                    android:elevation="@dimen/shadow_2"
                    android:text="무료"
                    style="@style/S_bold"
                    android:textColor="@color/basic_point"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_2" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>