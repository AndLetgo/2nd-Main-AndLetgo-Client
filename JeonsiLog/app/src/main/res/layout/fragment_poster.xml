<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.example.jeonsilog.viewmodel.ExhibitionPosterViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.exhibition.PosterFragment">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_poster"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1.33"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageButton
            android:id="@+id/ib_download"
            android:layout_width="@dimen/item_24"
            android:layout_height="@dimen/item_24"
            app:layout_constraintTop_toBottomOf="@id/vp_poster"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_download"
            android:background="@color/transparent"
            android:layout_marginTop="@dimen/margin_28"
            android:layout_marginEnd="@dimen/margin_24"/>

        <LinearLayout
            android:id="@+id/ll_poster_empty_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/illus_empty_poster"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty_poster_title"
                style="@style/M_bold"
                android:textColor="@color/gray_medium"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginBottom="@dimen/margin_4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty_poster_description"
                style="@style/M_regular"
                android:textColor="@color/gray_medium"/>
            <Button
                android:id="@+id/btn_report_poster_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_report_poster"
                style="@style/S_regular"
                android:textColor="@color/gray_medium"
                android:background="@drawable/shape_rounded_poster_iv"
                android:paddingHorizontal="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_80"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>