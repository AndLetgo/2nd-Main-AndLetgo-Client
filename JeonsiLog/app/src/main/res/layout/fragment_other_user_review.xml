<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_other_user_review_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/other_review_count"
            style="@style/M_bold"
            android:layout_marginTop="@dimen/margin_28"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_other_user_review"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="76dp"
            android:layout_marginBottom="@dimen/margin_56"
            android:layout_marginHorizontal="@dimen/margin_20"
            app:layout_constraintTop_toTopOf="parent"  />

        <ImageView
            android:id="@+id/iv_other_user_review_empty_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/illus_empty_review"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.35"
            tools:ignore="ContentDescription"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_other_user_review_empty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_other_review"
            style="@style/M_bold"
            android:textColor="@color/gray_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_other_user_review_empty_img"
            android:layout_marginTop="@dimen/margin_20"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>