<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="78dp">

        <ImageView
            android:id="@+id/iv_noti_profile"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/shape_round_iv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/margin_20"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/tv_noti_title"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            style="@style/M_bold"
            android:textColor="@color/basic_black"
            app:layout_constraintTop_toTopOf="@id/iv_noti_profile"
            app:layout_constraintStart_toEndOf="@id/iv_noti_profile"
            android:layout_marginStart="@dimen/margin_16"
            />


        <TextView
            android:id="@+id/tv_noti_content"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            style="@style/M_regular"
            android:textColor="@color/basic_black"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/iv_noti_profile"
            app:layout_constraintStart_toEndOf="@id/tv_noti_title"
            android:layout_marginStart="@dimen/margin_4"
            />

        <TextView
            android:id="@+id/tv_noti_time"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            style="@style/S_regular"
            android:textSize="12sp"
            android:textColor="@color/gray_medium"
            app:layout_constraintTop_toBottomOf="@id/tv_noti_title"
            app:layout_constraintStart_toStartOf="@id/tv_noti_title"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>