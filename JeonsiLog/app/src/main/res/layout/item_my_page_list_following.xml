<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <ImageView
            android:id="@+id/iv_mypage_list_following_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/illus_default_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/margin_20"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_mypage_list_follow_nick"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            style="@style/M_regular"
            android:textColor="@color/basic_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_mypage_list_following_profile"
            android:layout_marginStart="@dimen/margin_16" />

        <Button
            android:id="@+id/btn_mypage_list_following"
            android:layout_width="72dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/margin_24"
            android:background="@drawable/shape_corner_round_follower_btn"
            android:text="@string/btn_following"
            android:textColor="@color/gray_medium"
            style="@style/S_regular"
            android:outlineProvider="none" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>