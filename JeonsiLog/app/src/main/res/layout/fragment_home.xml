<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.home.HomeFragment"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_width="@dimen/item_32"
                android:layout_height="@dimen/item_32"
                android:src="@drawable/logo_jeonsilog"/>
            <ImageView
                android:layout_width="81dp"
                android:layout_height="20dp"
                android:src="@drawable/illus_jeonsilog_title"
                android:layout_marginStart="@dimen/margin_28"/>
        </androidx.appcompat.widget.Toolbar>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_home_exhibition"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_0"
            tools:listitem="@layout/item_home_exhibition"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingBottom="@dimen/margin_56"/>

        <ImageButton
            android:id="@+id/ib_fab_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_home_fab"
            android:background="@drawable/shape_round_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/margin_28"
            android:layout_marginBottom="@dimen/margin_88"
            android:elevation="@dimen/shadow_12"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>