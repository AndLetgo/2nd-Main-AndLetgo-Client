<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_80">

        <ImageView
            android:id="@+id/iv_exhibition_place_img"
            android:layout_width="@dimen/item_48"
            android:layout_height="@dimen/item_48"
            android:layout_marginStart="@dimen/margin_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_place"
            />

        <LinearLayout
            android:layout_width="@dimen/item_0"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_marginStart="@dimen/margin_12"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginVertical="@dimen/margin_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_exhibition_place_img"
            app:layout_constraintTop_toTopOf="parent" >
            <TextView
                android:id="@+id/tv_exhibition_place_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/M_regular"
                android:textColor="@color/basic_black" />
            <TextView
                android:id="@+id/tv_exhibition_place_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/M_regular"
                android:textColor="@color/gray_medium" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>